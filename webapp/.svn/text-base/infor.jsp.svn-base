<script type="text/javascript">
	function join(){
	<!-- 立即投资按钮 判断是否登录事件join()-->
		var userid=$("#userid").val();
		 
		var yuebox = document.getElementById("yuebox");
		var yueboox = document.getElementById("yueboox"); 
		var yuebx = document.getElementById("yuebx"); 
		
		/* var userid = ${userinfo.userid}.val();
		var proid = $(proid).val(); 
		alert(userid+"哈哈哈哈"+proid);*/
		if(userid!=""){
			//如果已登录，跳这里
			yuebox.style.display = "none";
			yueboox.style.display = "block";
			yuebx.style.display = "none";
		}else {
			//未登录，跳这里 
			alert("请先登入!");
		window.location.href="<%=basePath%>/login.jsp";
		} 
	
	}
	
	//点击 立即投标（投资），发生此事件  
	function joinn(){
		var userid = $("#userid").val();
		var proid = $("#proid").val();
		var userrmb = $("#userrmb").val();
		if(userrmb<${pro.proprice})
		{
			$("#dayu").html("输入的金额不能小于最低投资金额").css({"color":"red"});
		}
		else
		{
			$.ajax({
				url:"<%=basePath%>finn/join",
				type:"post",
				data:{"userid":userid,"proid":proid,"userrmb":userrmb},
				dataType:"json",
				cache:false,
				async:false,
				success:function(data){
					if(data.result=="success"){
						location.href=data.url;
					}else{
						alert("投标失败！");
					}
				}
			});
		}
	}
	var c=0;
	function saoma(){
		var userid = $("#userid").val();
		var proid = $("#proid").val();
		var userrmb = $("#userrmb").val();
		if(c%2==0){
			$("#saoma").show();
			$.ajax({
				url:"<%=basePath%>finn/join",
				type:"post",
				data:{"userid":userid,"proid":proid,"userrmb":userrmb},
				dataType:"json",
				cache:false,
				async:false,
				success:function(data){
					if(data.result=="success"){
						
					}else{
						alert("投标失败！");
					}
				}
			});
		}else{
			$("#saoma").hide();
		}
		c++;
	}
	//投资记录显示 
 	$(function (){	
		var pri = $("#proid").val();
		$("#pbox").empty();
		$.ajax({
			url:"<%=basePath%>finn/selectJoin",
			type:"post",
			data:{"proid":pri},
			dataType:"json",
			cache:false,
			async:false,
			success:function(data){
					var s ="";
					if(data.result != null && data.result != ""){
						$(data.result).each(function(){
							var checkdate = new Date(this.checkfirstdate);
						     s+='<tr><td>'+this.finid+'</td>'+
						     '<td>'+this.usernickname+'</td>'+
						     '<td><span class="c-orange">'+this.userrmb+'</span></td>'+
						     '<td>'+checkdate.toLocaleString().substring(0,10)+'</td></tr>';
						    	   
						    });
					}else{
						
						s+='<tr><td colspan="4" height="120px">此标暂无投资信息!</td></tr>';
					}
				    
				    $("#pbox").append(s);
			}
		
		});
	}); 
</script>
